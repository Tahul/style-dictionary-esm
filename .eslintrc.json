{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "mocha": true,
    "jest": true
  },

  "globals": {
    "Buffer": true,
    "escape": true
  },

  "extends": [
    "@antfu"
  ],

  "rules": {
    "no-console": 0,
    "no-unused-vars": 1,
    "no-control-regex": 0,
    "comma-dangle": 0,
    "no-prototype-builtins": 0,
    "n/no-path-concat": 0,
    "n/prefer-global/process": 0,
    "n/prefer-global/buffer": 0,
    "@typescript-eslint/no-invalid-this": 0
  }
}
